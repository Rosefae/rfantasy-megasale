<ul class="books">
    {%- for book in processed -%}
    <li class="book" {% if book.wide %} data-wide {% endif %} {% if book.directLink !="" %} data-direct {% endif %} {%
        if book.intl %} data-intl {% endif %}>
        <div class="book__image">
            {%- if book.imgLink != "" -%}
            <img src="{{book.imgLink}}" alt=" " aria-hidden="true" />
            {%- else -%}
            <img src="https://images.amazon.com/images/P/{{book.asin}}.01.LZZZZZZZ.jpg" alt=" " aria-hidden="true" />
            {%- endif -%}
        </div>
        <div class="book__title">
            {{book.title}}
        </div>
        <div class="book__author">
            {{book.author}}
        </div>
        <div class="book__tags">
            {%- if book.spfboCohort != "" -%}
            <span class="book__tag">{{book.spfboCohort}}</span>
            {%- endif -%}
        </div>
        {%- if book.directLink != "" -%}
        <div class="book__direct-link book__link">
            <a href="{{book.directLink}}">
                <span class="book__link-text">Buy <span class="sr-only">{{book.title}} </span>Direct from Author</span>
            </a>
        </div>
        {%- endif -%}
        <ul class="book__links">
            {%- for market in marketplaces -%}
            <li class="book__link book__link-zon" data-market="{{market.countryCode}}">
                <a href="https://www.amazon{{market.urlSuffix}}/dp/{{book.asin}}">
                    <span class="sr-only">Get {{book.title}} on </span>
                    <span class="book__link-text">Amazon{{market.urlSuffix}}</span>
                    <img src="https://flagcdn.com/h20/{{market.countryCode}}.png" alt=" " aria-hidden="true" />
                </a>
            </li>
            {%- endfor -%}
            {%- if book.koboLink != "" -%}
            <li class="book__link book__link-wide">
                <a href="{{book.koboLink}}">
                    <span class="sr-only">Get {{book.title}} on </span>
                    <span class="book__link-text">Kobo</span>
                </a>
            </li>
            {%- endif -%}
            {%- if book.smashwordsLink != "" -%}
            <li class="book__link book__link-wide">
                <a href="{{book.smashwordsLink}}">
                    <span class="sr-only">Get {{book.title}} on </span>
                    <span class="book__link-text">Smashwords</span>
                </a>
            </li>
            {%- endif -%}
            {%- if book.googleLink != "" -%}
            <li class="book__link book__link-wide">
                <a href="{{book.googleLink}}">
                    <span class="sr-only">Get {{book.title}} on </span>
                    <span class="book__link-text">Google Play Store</span>
                </a>
            </li>
            {%- endif -%}
            {%- if book.appleLink != "" -%}
            <li class="book__link book__link-wide">
                <a href="{{book.appleLink}}">
                    <span class="sr-only">Get {{book.title}} on </span>
                    <span class="book__link-text">Apple Books</span>
                </a>
            </li>
            {%- endif -%}
            {%- if book.bnLink != "" -%}
            <li class="book__link book__link-wide">
                <a href="{{book.bnLink}}">
                    <span class="sr-only">Get {{book.title}} at </span>
                    <span class="book__link-text">Barnes & Noble</span>
                </a>
            </li>
            {%- endif -%}
        </ul>
    </li>
    {%- endfor -%}
</ul>